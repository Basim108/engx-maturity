{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "schema:rule/category",
  "title": "Rule Category",
  "description": "A hierarchical category that groups a set of rules.",
  "type": "object",
  "properties": {
    "categoryId": {
      "type": "string",
      "description": "Unique identifier"
    },
    "title": {
      "type": "string",
      "description": "Brief summary of a category"
    },
    "children": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "schema:rule/category"
      }
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$id": "schema:rule",
        "title": "Rule",
        "description": "An engineering excellence rule or practice that some maturity levels might contain.",
        "type": "object",
        "properties": {
          "ruleId": {
            "type": "string",
            "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-4[0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$",
            "description": "Unique identifier in UUID v4 format"
          },
          "title": {
            "type": "string",
            "description": "Brief summary of a rule"
          },
          "description": {
            "type": "string",
            "description": "Detailed explanation of the rule and its context"
          },
          "tags": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "description": "for better further search. For example, 'security', 'metrics', etc"
            }
          },
          "articles": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "properties": {
                "url": {
                  "type": "string",
                  "description": "URL to an article with additional information about the rule"
                },
                "title": {
                  "type": "string",
                  "description": "An article header."
                }
              },
              "required": ["url", "title"]
            }
          }
        },
        "required": ["ruleId", "title"]
      }
    }
  },
  "required": ["categoryId", "title"]
}